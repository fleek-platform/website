---
import Layout from '@layouts/SupportPage.astro';
import HomePageHero from '@components/Support/HomePageHero';
import CategoryCards from '@components/Support/CategoryCards';
import FeaturedArticles from '@components/Support/FeaturedArticles';
import UsefulVideos from '@components/Support/UsefulVideos';
import settings from '@base/settings.json';
import AnnouncementModal from '@components/AnnouncementModal';
const pageOriginURL = Astro.url.href;
---

<Layout
  title={settings.site.metadata.support.title}
  image={settings.site.metadata.support.image}
  slug={settings.site.metadata.support.slug}
  description={settings.site.metadata.support.description}
>
  <AnnouncementModal pathname={Astro.url.pathname} client:only="react" />
  <main class="support container font-plex-sans">
    <HomePageHero client:load />
    <CategoryCards client:load />
    <FeaturedArticles />
    <UsefulVideos pageOriginURL={pageOriginURL} client:load />
  </main>
</Layout>
